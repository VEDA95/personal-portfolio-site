---
import { config } from '@fortawesome/fontawesome-svg-core';
import { NavBar, PrimaryOffCanvasMenu } from '../components/layout/nav';
import HireBadge from '../components/layout/hireBadge';
import SocialIcons from '../components/layout/socialIcons';
import '@fortawesome/fontawesome-svg-core/styles.css';

config.autoAddCss = false;
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal portfolio site of Stefan Netterfield...">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;700&display=swap" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="grid grid-cols-1 grid-rows-[auto_auto_2fr] max-w-screen min-h-screen bg-neutral-800 text-neutral-200 font-sans">
		<NavBar client:load>
			<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
				<a href="/">Home</a>
			</li>
			<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
				<a href="/about">About</a>
			</li>
			<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
				<a href="/skills">Skills</a>
			</li>
			<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
				<a href="/projects">Projects</a>
			</li>
			<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
				<a href="/contact">Contact</a>
			</li>
			<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
				<a href="/blog">Blog</a>
			</li>
		</NavBar>
		<PrimaryOffCanvasMenu client:media="(max-width: 768px)" />
		<slot />
		<footer class="flex flex-col md:flex-row justify-center md:justify-between mx-2 md:mx-4 p-6 lg:p-8">
			<div class="flex flex-col w-full md:w-1/2 items-center md:items-start">
				<div class="my-2">
					<HireBadge client:visible />
				</div>
				<span><span class="font-bold my-2 md:my-0">Hours</span>: 9AM - 9PM (EST.)</span>
				<span class="font-thin my-2 md:my-0">&copy; Copyright 2023</span>
			</div>
			<div class="flex flex-col w-full md:w-1/2 justify-center md:justify-end my-2 md:my-0">
				<SocialIcons client:visible />
			</div>
		</footer>
	</body>
</html>