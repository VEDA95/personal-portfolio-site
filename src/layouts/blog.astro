---
import { Image } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';
import { config } from '@fortawesome/fontawesome-svg-core';
import { NavBar, SecondaryOffCanvasMenu } from '../components/layout/nav';
import SocialIcons from '../components/layout/socialIcons';
import siteLogo from '../../public/personal_site_logo_transparent_background.png';
import '@fortawesome/fontawesome-svg-core/styles.css';
import '../styles/app.css';

config.autoAddCss = false;
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal portfolio site of Stefan Netterfield..." />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
		<link rel="icon" type="image/x-icon" sizes="16x16 32x32 48x48 64x64" href="/favicons/favicon.ico" />
		<link rel="apple-touch-icon" sizes="120x120 152x152 167x167 180x180" href="/favicons/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="144x144 192x192" href="/favicons/android-chrome-192x192.png" />
		<link rel="icon" type="image/png" sizes="256x256 384x384 512x512" href="/favicons/android-chrome-512x512.png" />
		<link rel="manifest" href="/favicons/site.webmanifest" />
		<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#980404" />
		<meta name="msapplication-TileColor" content="#171717" />
		<meta name="theme-color" content="#171717" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Chivo:wght@300;400;700&display=swap" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="grid grid-cols-1 grid-rows-[auto_auto_2fr] max-w-full min-h-screen bg-neutral-700 text-neutral-200 font-sans">
		<NavBar client:load>
			<Image
				src={siteLogo}
				slot="siteIcon"
				class="w-nav-logo h-nav-logo aspect-auto"
				alt="Logo for portfolio website" />
			<ul class="hidden md:flex md:gap-x-6 lg:gap-x-12" slot="navLinkList">
				<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
					<a href="/blog">Home</a>
				</li>
				<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
					<a href="/blog/categories/software">Software / Tech</a>
				</li>
				<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
					<a href="/blog/categories/after-hours">After Hours</a>
				</li>
				<li class="text-sm font-semibold leading-6 transition-colors ease-linear hover:text-dark-red">
					<a href="/">Return to Site <span aria-hidden="true">&rarr;</span></a>
				</li>
			</ul>
		</NavBar>
		<SecondaryOffCanvasMenu client:media="(max-width: 768px)">
			<Image
				src={siteLogo}
				slot="siteIcon"
				class="w-nav-logo h-nav-logo aspect-auto"
				alt="Logo for portfolio website" />
			<ul class="space-y-2 py-6" slot="navLinkList">
				<li class="-mx-3 block transition-colors ease-linear rounded-lg px-3 py-2 text-2xl text-center font-bold leading-7 hover:text-dark-red">
					<a href="/blog">Home</a>
				</li>
				<li class="-mx-3 block transition-colors ease-linear rounded-lg px-3 py-2 text-2xl text-center font-bold leading-7 hover:text-dark-red">
					<a href="/blog/categories/software">Software / Tech</a>
				</li>
				<li class="-mx-3 block transition-colors ease-linear rounded-lg px-3 py-2 text-2xl text-center font-bold leading-7 hover:text-dark-red">
					<a href="/blog/categories/after-hours">After Hours</a>
				</li>
				<li class="-mx-3 block transition-colors ease-linear rounded-lg px-3 py-2 text-2xl text-center font-bold leading-7 hover:text-dark-red">
					<a href="/">Return to Site <span aria-hidden="true">&rarr;</span></a>
				</li>
			</ul>
		</SecondaryOffCanvasMenu>
		<slot />
		<footer class="flex flex-col md:flex-row justify-center md:justify-between mx-2 md:mx-4 p-6 lg:p-8">
			<div class="flex flex-col w-full md:w-1/2 items-center md:items-start">
				<span class="font-thin my-2 md:my-0">&copy; Copyright 2023</span>
			</div>
			<div class="flex flex-col w-full md:w-1/2 justify-center md:justify-end my-2 md:my-0">
				<SocialIcons client:visible />
			</div>
		</footer>
	</body>
</html>