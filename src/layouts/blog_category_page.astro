---
import Layout from './blog.astro';
import Post from '../components/post.astro';
import type { Posts, Post as PostsItem } from '../data/types/blog';

export interface Props {
    title: string;
    posts: Posts;
}

const { title, posts } = Astro.props;
---

<Layout title="Stefan's Corner - Blog">
    <main class="row-span-6 relative">
        <section class="flex px-4">
            <h1 class="text-4xl font-bold">{title}</h1>
        </section>
        <div class="flex w-full justify-center">
            <section class="grid w-full md:w-96 px-8 sm:px-0 justify-center grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mt-3">
                {posts.map((item: PostsItem) => <Post id={item.id} date_created={item.date_created} title={item.title} category={item.category} postimg={item.postimg} content={item.content} />)}
            </section>
        </div>
    </main>
</Layout>